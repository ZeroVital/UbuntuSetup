# export FZF_DEFAULT_COMMAND='fd --type f'

# Example: Use rg (ripgrep) with fzf for faster searching
# Uncomment the following line if you have 'rg' installed
# export FZF_DEFAULT_COMMAND='rg --files'

# Example: Customize fzf options
export FZF_DEFAULT_OPTS='--height 40% --layout=reverse --border'
